<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Si el archivo existe, servirlo directamente
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Si no existe, enviar a CodeIgniter
    RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>
